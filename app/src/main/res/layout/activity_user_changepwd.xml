<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Change_Popupwindow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/Image_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/return_black_man" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="@color/Black"
            android:textSize="18dp" />

    </RelativeLayout>

    <include layout="@layout/activity_user_backgroundline" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/tishitiao_man_4x"
            android:drawablePadding="12dp"
            android:text="请输入您的旧密码"
            android:textColor="@color/Black"
            android:textSize="16dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/ChangePwd_EditOldPwd"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7"
            android:background="@null"
            android:hint="   请输入"
            android:inputType="textPassword"
            />

        <TextView
            android:id="@+id/ChangePwd_Forget_oldPwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:text="忘记旧密码?"
            android:textColor="@color/colorTextYangXIn" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/tishitiao_man_4x"
            android:drawablePadding="12dp"
            android:text="请输入您的新密码"
            android:textColor="@color/Black"
            android:textSize="16dp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/ChangePwd_NewPwdEdit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@null"
        android:hint="   请输入新密码"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/ChangePwd_NexNewPwdEdit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:hint="   请再次输入"
        android:inputType="textPassword"
        />


    <Button
        android:id="@+id/ChangePwd_mButYes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/queding_but"
        android:text="确定"
        android:textColor="@color/white" />


</LinearLayout>