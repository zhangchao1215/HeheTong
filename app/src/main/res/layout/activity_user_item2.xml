<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="200dp"
              android:layout_height="290dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="290dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/yangcai4x"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="财富数据"
                android:textColor="@color/Black"
                android:textSize="16dp"
                />
        </RelativeLayout>

        <include layout="@layout/activity_background_black_lines"/>


        <RelativeLayout
            android:id="@+id/user_money_relative"
            android:layout_width="182dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/bggr4x"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/one_zhu_relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="28dp">

                    <ImageView
                        android:id="@+id/senve_zhuImage"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/senve_zhux"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fang_senve_small"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/one_zhu_relative"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="28dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/senve_quan4x"
                        />

                    <TextView
                        android:id="@+id/user_item_text7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="69"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        />

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:id="@+id/two_zhu_relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="28dp">

                    <ImageView
                        android:id="@+id/eight_zhuImage"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/eight_zhu"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fang_eight_small"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/two_zhu_relative"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="28dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/eight_quan4x"
                        />

                    <TextView
                        android:id="@+id/user_item_text8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="69"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        />

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >

                <RelativeLayout
                    android:id="@+id/Three_zhu_relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="28dp">

                    <ImageView
                        android:id="@+id/nine_zhuImage"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/nine_zhu"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fang_nine_small"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/Three_zhu_relative"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="28dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/nine_quan4x"
                        />

                    <TextView
                        android:id="@+id/user_item_text9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="69"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        />

                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/user_money_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/user_item_ceshi7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableLeft="@drawable/fang_senve_big"
                android:drawablePadding="11dp"
                android:text="财富创造测试"
                />

            <TextView
                android:id="@+id/user_item_ceshi8"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/fang_eight_big"
                android:drawablePadding="11dp"
                android:text="财富承受测试"
                />

            <TextView
                android:id="@+id/user_item_ceshi9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/fang_jiu9"
                android:drawablePadding="11dp"
                android:text="财富力测试"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_money_null_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorViewLines"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="58dp"
                android:src="@drawable/wushuju4x"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="你还没有测试"
                />

            <Button
                android:id="@+id/user_mony_but"
                android:layout_width="148dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="21dp"
                android:background="@drawable/shape_but_user"
                android:text="开始自我检测"
                android:textColor="@color/white"
                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>