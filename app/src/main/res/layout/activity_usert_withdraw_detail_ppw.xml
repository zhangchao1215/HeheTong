<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="264dp"
        android:layout_height="266dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_relative"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:text="支付宝提现"
            android:textColor="@color/Black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/mText_Widthraw_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王大锤" />

            <TextView
                android:id="@+id/mText_Widthraw_Alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="支付宝账号信息"

                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/mText_Money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="180.00"
                android:textColor="@color/Black"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/mText_Money"
                android:text="元" />

        </RelativeLayout>

        <TextView
            android:id="@+id/mText_Widthraw_Message"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:text="提现结果处理中" />

        <Button
            android:id="@+id/mbut_widthraw"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/queding_but"
            android:text="我知道啦"
            android:textColor="@color/white" />

    </LinearLayout>


</RelativeLayout>