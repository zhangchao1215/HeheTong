<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/white"
			  android:orientation="vertical"
		>

	<include
			android:id="@id/loding"
			layout="@layout/activity_loding_fragment"
			android:visibility="visible"
			/>

	<RelativeLayout
			android:id="@+id/mRelative_title"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:background="@color/colorTextYangXIn"
			>

		<RelativeLayout
				android:id="@+id/Shop_Search_link"
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:layout_centerVertical="true"
				android:layout_marginLeft="16dp"
				android:layout_marginRight="47dp"
				android:background="@drawable/shape_but"
				>

			<TextView
					android:id="@+id/shop_text_search"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginLeft="8dp"
					android:drawableLeft="@drawable/faxiansousuo4x"
					android:drawablePadding="8dp"
					android:text="关键字搜索"
					android:textSize="@dimen/dp_14"
					/>

		</RelativeLayout>

		<ImageView
				android:id="@+id/Shopping_car"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="11dp"
				android:padding="5dp"
				android:src="@drawable/gouwuche_white4x"

				/>

	</RelativeLayout>


	<ScrollView
			android:id="@+id/mNestedScroll"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:visibility="gone">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<android.support.v4.view.ViewPager
						android:id="@+id/Shop_viewpager"
						android:layout_width="match_parent"
						android:layout_height="120dp"
						/>

				<RadioGroup
						android:id="@+id/Shop_radiogroup"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerHorizontal="true"
						android:layout_marginTop="110dp"
						android:orientation="horizontal"
						/>

			</RelativeLayout>

			<LinearLayout
					android:id="@+id/Shop_Linear_haohuo"
					android:layout_width="match_parent"
					android:layout_height="96dp"
					android:layout_marginRight="16dp"
					android:orientation="horizontal"

					/>


			<include layout="@layout/activity_user_backgroundline"/>


			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="128dp">

				<RelativeLayout
						android:id="@+id/Shop_TizhiRelative"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight="1">

					<TextView
							android:textSize="@dimen/dp_14"
							android:id="@+id/mText_shop_tizhi"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="16dp"
							android:layout_marginTop="13dp"
							android:text="体质养生"/>

					<TextView
							android:textSize="@dimen/dp_14"
							android:id="@+id/mText_shop_tizhi_desc"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_below="@id/mText_shop_tizhi"
							android:layout_marginLeft="16dp"
							android:layout_marginTop="2dp"
							android:text="医学权威为你疏解"
							android:textColor="@color/colorPPw"/>

					<ImageView
							android:id="@+id/Shap_ImageTwo"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_below="@id/mText_shop_tizhi_desc"
							android:layout_marginBottom="5dp"
							android:layout_marginLeft="16dp"
							android:layout_marginRight="12dp"
							android:layout_marginTop="10dp"
							android:scaleType="centerCrop"
							android:src="@drawable/jcwz"/>


				</RelativeLayout>

				<View
						android:layout_width="0.2dp"
						android:layout_height="match_parent"
						android:background="#cccccc"/>

				<LinearLayout
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:orientation="vertical">

					<RelativeLayout
							android:id="@+id/Shop_Wuxing_Relative"
							android:layout_width="match_parent"
							android:layout_height="64dp">

						<TextView
								android:textSize="@dimen/dp_14"
								android:id="@+id/mText_shop_wuxing"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginLeft="15dp"
								android:layout_marginTop="13dp"
								android:text="五行养生"/>

						<TextView
								android:textSize="@dimen/dp_14"
								android:id="@+id/mText_shop_wuxing_desc"

								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@+id/mText_shop_wuxing"
								android:layout_marginLeft="15dp"
								android:layout_marginTop="2dp"
								android:text="医学权威为你疏解"
								android:textColor="@color/colorPPw"/>

						<ImageView
								android:id="@+id/mImage_shop_wuxing"
								android:layout_width="48dp"
								android:layout_height="48dp"
								android:layout_alignParentRight="true"
								android:layout_centerVertical="true"
								android:layout_marginRight="8dp"
								android:src="@drawable/jcwz"/>

					</RelativeLayout>

					<View
							android:layout_width="match_parent"
							android:layout_height="0.2dp"
							android:background="#cccccc"/>

					<RelativeLayout
							android:id="@+id/Shop_SijiRelative"
							android:layout_width="match_parent"
							android:layout_height="64dp">

						<TextView
								android:textSize="@dimen/dp_14"
								android:id="@+id/mText_shop_siji"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginLeft="15dp"
								android:layout_marginTop="13dp"
								android:text="四季健康"/>

						<TextView
								android:textSize="@dimen/dp_14"
								android:id="@+id/mText_shop_siji_desc"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@+id/mText_shop_siji"
								android:layout_marginLeft="15dp"
								android:layout_marginTop="2dp"
								android:text="医学权威为你疏解"
								android:textColor="@color/colorPPw"/>

						<ImageView
								android:id="@+id/mImage_shop_siji"
								android:layout_width="48dp"
								android:layout_height="48dp"
								android:layout_alignParentRight="true"
								android:layout_centerVertical="true"
								android:layout_marginRight="8dp"
								android:src="@drawable/jcwz"/>

					</RelativeLayout>


				</LinearLayout>


			</LinearLayout>


			<include layout="@layout/activity_user_backgroundline"/>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="212dp"
					android:background="@color/white"
					android:orientation="vertical"
					>

				<TextView
						android:textSize="@dimen/dp_14"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="16dp"
						android:layout_marginTop="9dp"
						android:text="和合自营"/>

				<android.support.v7.widget.RecyclerView
						android:id="@+id/ShopYouhui_recycler"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						/>

			</LinearLayout>

			<include layout="@layout/activity_user_backgroundline"/>

			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					>

				<View
						android:layout_width="match_parent"
						android:layout_height="12dp"
						android:background="@color/colorViewLines"
						/>

				<ImageView
						android:id="@+id/Shop_Image_Miaosha"
						android:layout_width="match_parent"
						android:layout_height="120dp"
						android:layout_marginTop="12dp"
						android:scaleType="centerCrop"
						/>

				<RelativeLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						>

					<ImageView
							android:id="@+id/Shop_ImageOne"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/miaoshabuting4x"
							/>

					<TextView
							android:textSize="@dimen/dp_14"
							android:id="@+id/Shop_text_miaosha"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_centerInParent="true"
							android:text="秒杀不停"
							android:textColor="@color/white"
							/>


				</RelativeLayout>


			</RelativeLayout>

			<include layout="@layout/activity_user_backgroundline"/>

			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					>

				<View
						android:layout_width="match_parent"
						android:layout_height="12dp"
						android:background="@color/colorViewLines"
						/>

				<ImageView
						android:id="@+id/Shop_Image_BenZhou"

						android:layout_width="match_parent"
						android:layout_height="120dp"
						android:layout_marginTop="12dp"
						android:scaleType="centerCrop"
						/>

				<RelativeLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

					<ImageView
							android:id="@+id/Shop_ImageTwo"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/benzhoushangfxin4x"
							/>

					<TextView
							android:textSize="@dimen/dp_14"
							android:id="@+id/Shop_text_BenZhou"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_centerInParent="true"
							android:text="本周上新"
							android:textColor="@color/white"
							/>

				</RelativeLayout>

			</RelativeLayout>


			<include layout="@layout/activity_user_backgroundline"/>

			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					>

				<View
						android:layout_width="match_parent"
						android:layout_height="12dp"
						android:background="@color/colorViewLines"
						/>

				<ImageView
						android:id="@+id/Shop_Image_PaiHang"
						android:layout_width="match_parent"
						android:layout_height="120dp"
						android:layout_marginTop="12dp"
						android:scaleType="centerCrop"
						/>

				<RelativeLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

					<ImageView
							android:id="@+id/Shop_ImageThree"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/paihangbang4x"
							/>

					<TextView
							android:textSize="@dimen/dp_14"
							android:id="@+id/Shop_text_Paihang"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_centerInParent="true"
							android:text="排行榜"
							android:textColor="@color/white"
							/>


				</RelativeLayout>


			</RelativeLayout>

			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="22dp"
					>

				<TextView
						android:textSize="@dimen/dp_14"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:layout_centerVertical="true"
						android:drawableLeft="@drawable/cainixihuan4x"
						android:drawablePadding="6dp"
						android:text="为你推荐"/>

			</RelativeLayout>

			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="#F0F0F0"

					>

				<android.support.v7.widget.RecyclerView
						android:id="@+id/Shop_Tuijian_Recycler"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginRight="6dp"
						/>

			</RelativeLayout>


			<RelativeLayout
					android:id="@+id/loadMall_relative"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:background="@color/white"
					android:visibility="gone"
					>

				<View
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:background="@color/colorViewLines"
						/>

				<TextView
						android:textSize="@dimen/dp_14"
						android:id="@+id/text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:text="正在加载。。。"

						/>

				<ProgressBar
						style="?android:attr/progressBarStyleSmall"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginRight="8dp"
						android:layout_toLeftOf="@+id/text"
						android:indeterminateDrawable="@drawable/dr_progress"/>

			</RelativeLayout>
		</LinearLayout>


	</ScrollView>


</LinearLayout>