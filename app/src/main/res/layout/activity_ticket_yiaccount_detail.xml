<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/activity_include_title"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/more_gray_man"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="2017"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/return_black_man"
            />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/Yiticket_Tab"
        android:layout_width="wrap_content"
        android:layout_height="44dp">

    </android.support.design.widget.TabLayout>

    <include layout="@layout/activity_user_backgroundline"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/Yiticket_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</LinearLayout>