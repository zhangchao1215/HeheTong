<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mLief_ItemClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/Life_ActicleImage"
            android:layout_width="104dp"
            android:layout_height="62dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/jcwz"
            />

        <RelativeLayout
            android:id="@+id/mitem_line"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/Life_ActicleImage"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/Life_ActicleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="dad"

                />

            <TextView
                android:id="@+id/Life_ActicleDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Life_ActicleTitle"
                android:maxLines="2"
                android:text="描述"
                android:textSize="12dp"
                android:visibility="gone"
                />


            <TextView
                android:id="@+id/Life_ActicleTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:text="2017"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/background"
            />
    </RelativeLayout>
</RelativeLayout>