<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLinear_MyActivities_ppw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/Image_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/return_black_man" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的活动"
            android:textColor="@color/Black"
            android:textSize="16dp" />

    </RelativeLayout>

    <include layout="@layout/activity_background_black_lines" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="4dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:background="@color/colorTextYangXIn" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="进行中"

            />

        <TextView
            android:layout_marginRight="16dp"
            android:drawablePadding="4dp"
            android:id="@+id/mText_SeeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/gengduo_man"
            android:gravity="center"
            android:text="查看详情"
            android:textColor="@color/colorTextYangXIn" />


    </RelativeLayout>

    <TextView
        android:id="@+id/MyActivities_Name"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:text="活动名称"
        android:textColor="@color/Black" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@drawable/shijian_man"
            android:drawablePadding="13dp"
            android:gravity="center"
            android:text="时间"

            />

        <TextView
            android:id="@+id/mText_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="2017.10.11" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@drawable/didian_man"
            android:drawablePadding="13dp"
            android:gravity="center"
            android:text="时间"

            />

        <TextView
            android:id="@+id/mText_AddAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="北京市丰台区外环西路26号院25号楼" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@drawable/didian_man"
            android:drawablePadding="13dp"
            android:gravity="center"
            android:text="我的参与人"

            />

        <TextView
            android:id="@+id/My_CanYuPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/huijt_you4x"
            android:gravity="center"
            android:text="2人" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorViewLines" />
</LinearLayout>