<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:fitsSystemWindows="true"
		>


	<LinearLayout
			android:id="@+id/mLinear_bottom"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dp_170"
			android:layout_alignParentBottom="true"
			android:background="@color/white"
			android:orientation="vertical"
			>

		<TextView
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:gravity="center"
				android:text="—— 分享 ——"
				/>

		<View
				android:layout_width="match_parent"
				android:layout_height="0.1dp"
				android:background="@color/color999"
				/>


		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="80dp"
				android:gravity="center"
				>

			<TextView
					android:id="@+id/weChat"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:drawablePadding="8dp"
					android:drawableTop="@drawable/wechat"
					android:gravity="center"
					android:text="微信好友"
					/>

			<TextView
					android:id="@+id/friendCircle"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:drawablePadding="8dp"
					android:drawableTop="@drawable/friend_circle"
					android:gravity="center"
					android:text="朋友圈"
					/>

			<TextView
					android:id="@+id/QQ"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:drawablePadding="8dp"
					android:drawableTop="@drawable/qq_image"
					android:gravity="center"
					android:text="QQ"
					/>


		</LinearLayout>

		<View
				android:layout_width="match_parent"
				android:layout_height="0.1dp"
				android:background="@color/color999"
				/>


		<TextView
				android:id="@+id/mText_cancle"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="取消"
				android:textColor="@color/color999"
				/>

	</LinearLayout>


</RelativeLayout>