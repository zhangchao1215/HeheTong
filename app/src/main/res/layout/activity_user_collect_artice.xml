<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    >

    <com.example.heyikun.heheshenghuo.modle.util.SwipeListLayout
        android:id="@+id/sll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"

        >

        <RelativeLayout
            android:layout_width="72dp"
            android:layout_height="130dp"
            android:background="@color/colorAccent"
            >

            <TextView
                android:id="@+id/mText_cancel"
                android:layout_width="32dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:text="取消收藏"
                android:textColor="@color/white"
                android:textSize="16dp"

                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/list_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="大咖说"
                android:textColor="@color/Black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="108dp"
                >

                <CheckBox
                    android:id="@+id/mImage_Duigou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/checkbox_selector"
                    android:button="@null"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:visibility="gone"
                    />
                <!--android:clickable="false"-->
                <!--android:focusableInTouchMode="false"-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/mImage_Duigou"
                    >

                    <ImageView
                        android:id="@+id/Collect_Image"
                        android:layout_width="120dp"
                        android:layout_height="76dp"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/jcwz"
                        />

                    <TextView
                        android:id="@+id/Collect_TextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/Collect_Image"
                        android:text="测试商品"
                        android:textColor="@color/Black"
                        />

                    <TextView
                        android:id="@+id/Collect_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/Collect_Image"
                        android:text="张召忠"
                        android:textColor="@color/Black"
                        />

                    <TextView
                        android:id="@+id/Collect_Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/Collect_Name"
                        android:text="20171026"
                        android:textColor="@color/Black"
                        />

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </com.example.heyikun.heheshenghuo.modle.util.SwipeListLayout>
</LinearLayout>