<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/InClude_NewNumberPhoneLinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <View
            android:layout_width="3dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:background="@color/colorTextYangXIn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="请设置新的手机号码" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">


        <EditText
            android:id="@+id/PhoneNumber_Edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/mText_Number"
            android:background="@null"
            android:hint="请输入"
            android:inputType="number"
            android:maxLength="11" />

        <ImageView
            android:id="@+id/Remove_PhoneNumberImage"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"

        >

        <Button
            android:id="@+id/mBut_getAuthCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/queding_but"
            android:text="点击获取验证码"
            android:textColor="@color/white"
            android:textSize="12dp"

            />

        <EditText
            android:id="@+id/Phone_Code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/mBut_getAuthCode"
            android:background="@null"
            android:hint="请输入验证码" />

    </RelativeLayout>

    <Button
        android:id="@+id/mBut_Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/next_but"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16dp" />
</LinearLayout>

