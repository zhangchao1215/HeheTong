<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
              android:background="#F0F0F0"
    >

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="确认订单"
                />

            <ImageView
                android:id="@+id/Image_Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:padding="5dp"
                android:src="@drawable/return_black_man"
                />

        </RelativeLayout>

        <include layout="@layout/activity_background_black_lines"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp">

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/colorTextYangXIn"

                />

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:text="王大锤"


                    />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/tv_name"
                    android:text="18888888"
                    />

                <TextView
                    android:id="@+id/tv_change_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:text="更改收件地址"
                    android:textColor="@color/colorTextYangXIn"

                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/relative1"
                android:layout_marginLeft="4dp"
                android:background="@color/color_ccc"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/relative1">

                <TextView
                    android:id="@+id/tv_shouhuo_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:drawableLeft="@drawable/shouhuodizhi_4man"
                    android:drawablePadding="8dp"
                    android:text="丰台科技园26号院"
                    />

            </RelativeLayout>

        </RelativeLayout>


        <include layout="@layout/activity_user_backgroundline"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="和合自营"

            />

        <include layout="@layout/activity_background_black_lines"/>

        <include layout="@layout/shop_detail_item"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="配送方式"
                android:textColor="#999999"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="快递：包邮"
                />

        </RelativeLayout>

        <include layout="@layout/activity_background_black_lines"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="买家留言"
                android:textColor="#999999"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/tv_message"
                android:background="@null"
                android:hint="填写对本次交易的特别说明"
                android:textColorHint="#999999"
                android:textSize="12dp"
                />
        </RelativeLayout>

        <include layout="@layout/activity_background_black_lines"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="3000+250易币"
                android:textColor="#e06252"
                />

            <TextView
                android:id="@+id/shop_tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tv_money"
                android:text="共三件商品，小计："
                />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/relative2"
        android:background="@color/color_ccc"
        />

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/heji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="合计："
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/heji"
            android:drawableLeft="@drawable/moneynv4x"
            android:text="3800+4600易币"
            android:textColor="#e87864"
            android:gravity="center"
            />


        <Button
            android:id="@+id/shop_mbut_summit"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorTextYangXIn"
            android:text="提交订单"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</RelativeLayout>