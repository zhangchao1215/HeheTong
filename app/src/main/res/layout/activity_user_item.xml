<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/user_linear"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
       android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/user_item_titleImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/yangshen4x"

                />

            <TextView
                android:id="@+id/user_item_titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="身体数据"
                android:textColor="@color/Black"
                android:textSize="16dp"
                />
        </RelativeLayout>

        <include layout="@layout/activity_background_black_lines"/>


        <RelativeLayout
            android:id="@+id/user_shen_text_relative"
            android:layout_width="182dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/bggr4x"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/one_zhu_relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="28dp">

                    <ImageView
                        android:id="@+id/One_zhuImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/one_zhu4x"
                        />

                    <ImageView
                        android:id="@+id/one_fang_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fang_yellow"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/one_zhu_relative"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="28dp">

                    <ImageView
                        android:id="@+id/one_quan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/one_quan4x"
                        />

                    <TextView
                        android:id="@+id/user_item_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="69"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        />

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:id="@+id/two_zhu_relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="28dp">

                    <ImageView
                        android:id="@+id/Two_zhuImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/two_zhu4x"

                        />

                    <ImageView
                        android:id="@+id/two_fang_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fang_two_small"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/two_zhu_relative"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="28dp">

                    <ImageView
                        android:id="@+id/two_quan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/two_quan4x"
                        />

                    <TextView
                        android:id="@+id/user_item_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="69"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        />

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >

                <RelativeLayout
                    android:id="@+id/Three_zhu_relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="28dp">

                    <ImageView
                        android:id="@+id/Three_zhuImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/three_zhu"
                        />

                    <ImageView
                        android:id="@+id/three_fang_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fang_san_small"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/Three_zhu_relative"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="28dp">

                    <ImageView
                        android:id="@+id/three_quan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/three_quan4x"
                        />

                    <TextView
                        android:id="@+id/user_item_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="69"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        />

                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/user_shen_ceshiLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/user_item_ceshi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableLeft="@drawable/fang_shiyi_big"
                android:drawablePadding="11dp"
                android:text="亚健康测试"
                android:ellipsize="end"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/user_item_ceshi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/fang_two_big"
                android:drawablePadding="11dp"
                android:text="疲劳度测试"
                android:ellipsize="end"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/user_item_ceshi3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/fang_san"
                android:drawablePadding="11dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"
                android:text="性功能测试"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_shen_null_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@drawable/shape_user_shen_linear"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="58dp"
                android:src="@drawable/wushuju4x"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="你还没有测试"
                />

            <Button
                android:id="@+id/user_shen_but"
                android:layout_width="148dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="21dp"
                android:background="@drawable/shape_but_user"
                android:text="开始自我检测"
                android:textColor="@color/white"
                />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>