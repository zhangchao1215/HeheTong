<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/activity_user_backgroundline"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">


        <TextView
            android:id="@+id/help_text_One"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/tishitiao_man_4x"
            android:drawablePadding="12dp"
            android:text="账户问题"
            />
    </RelativeLayout>

    <include layout="@layout/activity_background_black_lines"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/help_recycler_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>