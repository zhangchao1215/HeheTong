<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mPPw_Linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="342dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/zhifutanchuang4x"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/pay_image"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"/>

        <TextView
            android:id="@+id/Pay_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pay_image"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/Pay_Name"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/zhifu_image"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="应付总价"
                />

            <TextView
                android:id="@+id/pay_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="元"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/relative"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/zhifu_image"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="易币支付"

                />

            <TextView
                android:id="@+id/pay_yibi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_below="@+id/relative2"
            android:background="#F0F0F0"
            >

            <com.example.heyikun.heheshenghuo.modle.util.PayPwdEditText
                android:id="@+id/mytext"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                />


        </RelativeLayout>

        <Button
            android:id="@+id/pay_But"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTextYangXIn"
            android:text="确认支付"
            android:textColor="@color/white"
            android:textSize="16dp"/>

    </RelativeLayout>

</RelativeLayout>