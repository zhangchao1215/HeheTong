<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/PopupWindow_iKnow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chenggong4x" />

    <TextView
        android:id="@+id/mText_SettingSucess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="设置成功"
        android:textColor="@color/Black"
        android:textSize="18dp"
        android:layout_marginTop="350dp"
        />

    <TextView
        android:id="@+id/mText_LoginPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mText_SettingSucess"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="请牢记您的登录密码"

        />

    <Button
        android:id="@+id/mBut_IKnow"
        android:layout_width="230dp"
        android:layout_height="44dp"
        android:layout_below="@id/mText_LoginPwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/queding_but"
        android:text="我知道啦"
        android:textColor="@color/white" />


</RelativeLayout>