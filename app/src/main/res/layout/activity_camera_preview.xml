<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

	<RelativeLayout
			android:id="@+id/mRelative_title"
			android:layout_width="match_parent"
			android:layout_height="45dp"
			android:background="@color/white">

		<TextView
				android:id="@+id/mText_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:text="舌苔表象"
				android:textColor="#333333"
				/>

		<ImageView
				android:id="@+id/mImage_Back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="8dp"
				android:padding="8dp"
				android:src="@drawable/return_black_man"
				/>
	</RelativeLayout>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@+id/mRelative_title"
			android:layout_margin="@dimen/dp_16"
			android:background="@drawable/jieqi_bottom"
			>

		<TextView
				android:id="@+id/mText_time"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dp_32"
				android:gravity="center"
				android:text="上传时间：2018/08/12"
				android:textColor="@color/color999"

				/>

		<LinearLayout
				android:id="@+id/mLinear"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/mText_time"
				android:layout_marginLeft="32dp"
				android:layout_marginRight="32dp"
				android:layout_marginTop="@dimen/dp_16"
				>


			<LinearLayout
					android:visibility="gone"
					android:id="@+id/mLinear_hand"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginRight="8dp"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					>

				<ImageView
						android:id="@+id/mImage_hand"
						android:layout_width="@dimen/dp_120"
						android:layout_height="@dimen/dp_120"/>


				<TextView
						android:id="@+id/mText_hand"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginTop="@dimen/dp_16"
						android:text="舌苔上部"
						android:textColor="#333333"
						android:textSize="14dp"
						/>
			</LinearLayout>

			<LinearLayout
					android:id="@+id/mLinear_left"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginRight="8dp"
					android:layout_weight="1"
					android:orientation="vertical"
					>

				<ImageView
						android:id="@+id/mImage_left"
						android:layout_width="@dimen/dp_120"
						android:layout_height="@dimen/dp_120"/>


				<TextView
						android:id="@+id/mText_left"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginTop="@dimen/dp_16"
						android:text="舌苔上部"
						android:textColor="#333333"
						android:textSize="14dp"
						/>
			</LinearLayout>

			<LinearLayout
					android:id="@+id/mLinear_right"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:layout_weight="1"
					android:orientation="vertical"
					>

				<ImageView
						android:id="@+id/mImage_right"
						android:layout_width="@dimen/dp_120"
						android:layout_height="@dimen/dp_120"/>


				<TextView
						android:id="@+id/mText_Right"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginTop="@dimen/dp_16"
						android:text="舌苔下部"
						android:textColor="#333333"
						android:textSize="14dp"
						/>
			</LinearLayout>
		</LinearLayout>


		<TextView
				android:id="@+id/text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/mLinear"
				android:layout_marginTop="64dp"
				android:gravity="center"
				android:text="评估结果"
				android:textColor="#333333"
				android:textSize="16dp"

				/>

		<TextView
				android:id="@+id/mText_result"
				android:layout_width="@dimen/dp_295"
				android:layout_height="@dimen/dp_130"
				android:layout_below="@+id/text"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="@dimen/dp_16"
				android:background="#fff0f0f0"
				android:padding="@dimen/dp_16"
				android:text="正在评估中，请等待。。。"
				/>


		<Button
				android:id="@+id/mBut_again"
				android:layout_width="@dimen/dp_255"
				android:layout_height="@dimen/dp_40"
				android:layout_alignParentBottom="true"
				android:layout_centerHorizontal="true"
				android:layout_marginBottom="@dimen/dp_24"
				android:background="@drawable/shape_but_radio"
				android:text="重新上传"
				android:textColor="@color/white"
				/>


	</RelativeLayout>


</RelativeLayout>