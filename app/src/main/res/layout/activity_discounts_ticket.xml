<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_include_title" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/quan_zy4x" />

        <TextView
            android:id="@+id/mText_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="24dp"
            android:text="满500减200"
            android:textColor="@color/Black"
            android:textSize="16dp"

            />

        <TextView
            android:id="@+id/mText_immediate_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="27dp"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ljsy_man_4x"
            android:gravity="center"
            android:text="立即使用"
            android:textColor="@color/colorTextYangXIn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mText_price"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="44dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="· 仅限购买和合自营产品使用"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="· 有限期：2017年9月1日至2018年8月31日"
                android:textSize="12dp" />


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/quan_sj4x" />

        <TextView
            android:id="@+id/mText_price_sj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="24dp"
            android:text="满500减200"
            android:textColor="@color/Black"
            android:textSize="16dp"

            />

        <TextView
            android:id="@+id/mText_immediate_use_sj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="27dp"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ljsy_man_4x"
            android:gravity="center"
            android:text="立即使用"
            android:textColor="@color/colorTextYangXIn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mText_price_sj"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="44dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="·仅限购买美的加湿器T29型使用"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="· 有限期：2017年9月1日至2018年8月31日"
                android:textSize="12dp" />


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>