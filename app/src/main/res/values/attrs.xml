<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TagsLayout">
        <attr name="tagVerticalSpace" format="dimension" />
        <attr name="tagHorizontalSpace" format="dimension" />
    </declare-styleable>
    <declare-styleable name="MarqueeViewStyle">
        <attr name="mvInterval" format="integer|reference"/>
        <attr name="mvAnimDuration" format="integer|reference"/>
        <attr name="mvTextSize" format="dimension|reference"/>
        <attr name="mvTextColor" format="color|reference"/>
        <attr name="mvSingleLine" format="boolean"/>
        <attr name="mvGravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="mvDirection">
            <enum name="bottom_to_top" value="0"/>
            <enum name="top_to_bottom" value="1"/>
            <enum name="right_to_left" value="2"/>
            <enum name="left_to_right" value="3"/>
        </attr>
    </declare-styleable>



    <declare-styleable name="CriceView">
        <!--主题颜色  线  圆点  半径圆所使用的颜色-->
        <attr name="themeColor" format="color" />
        <!--线的宽度 作用于  内圆 线-->
        <attr name="lineWith" format="dimension" />
        <!--文字大小  单位sp-->
        <attr name="textCircleSize" format="dimension" />
        <!--文字颜色-->
        <attr name="textCircleColor" format="color" />
        <!--圆点大小-->
        <attr name="pointSize" format="dimension" />
        <!--线到内圆的偏移量-->
        <attr name="lineOffset" format="dimension" />
        <!--文字到线的偏移量-->
        <attr name="textOffset" format="dimension" />
        <!--圆弧的颜色-->
        <attr name="arcColor" format="color" />
        <!--圆弧宽度-->
        <attr name="arcWidth" format="dimension" />
        <!--内容高度-->
        <attr name="contentWidth" format="dimension" />
        <!--最外面圆的半径 = 宽的一半+criceOffset-->
        <attr name="criceOffset" format="dimension" />
        <!--最外面带轮廓圆的半径  = 宽的一半+criceoffset+vacanyOffset-->
        <attr name="vacanyOffset" format="dimension" />
        <!--最外圆的间距-->
        <attr name="vacanyAnge" format="float"/>
        <attr name="timeClickColor" format="color"/>
    </declare-styleable>

</resources>